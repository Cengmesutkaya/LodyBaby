@model Package_Ecommerce.DataEntities.Models.Member
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            @using (Html.BeginForm("Edit", "Member"))
            {
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <div class="form-group row">
                        <label for="basic-input" class="col-sm-4 col-form-label">Müşteri Adı</label>
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="basic-input" class="col-sm-4 col-form-label">Müşteri Kodu</label>
                        <div class="col-sm-12">
                            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="basic-input" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-12">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="basic-input" class="col-sm-4 col-form-label">Telefon Numarası</label>
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "required" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="basic-input" class="col-sm-4 col-form-label">Şifre</label>
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="basic-input" class="col-sm-4 col-form-label">Adres - Kısa Açıklama</label>
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        </div>
                    </div>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-success form-control"><i class="fa fa-check-square-o"></i>Değişiklikleri Kaydet</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


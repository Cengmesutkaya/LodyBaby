
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="Mesut Kaya" />
    <title> Hammal | Admin Girişi</title>
    <link rel="icon" href="@Url.Content("~/Areas/Admin/Content/assets/images/favicon.ico")" type="image/x-icon" )">
    <link href="@Url.Content("~/Areas/Admin/Content/assets/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/Admin/Content/assets/css/animate.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/Admin/Content/assets/css/icons.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/Admin/Content/assets/css/app-style.css")" rel="stylesheet" />

</head>
<body class="authentication-bg">
    <!-- Start wrapper-->
    <div id="wrapper">
        <div class="card card-authentication1 mx-auto my-5 animated zoomIn">
            <div class="card-body">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="@Url.Content("~/Areas/Admin/Content/assets/images/logo-icon.png")" width="100%" />
                    </div>
                    <div class="card-title text-uppercase text-center py-2 text-white">GİRİŞ EKRANI</div>
                    @using (Html.BeginForm("SignIn", "Login"))
                    {
                        <div class="form-group">
                            <div class="position-relative has-icon-left">
                                <label for="exampleInputUsername" class="sr-only">Email</label>
                                <input type="email" id="exampleInputUsername" name="email" class="form-control" required="required" placeholder="Email">
                                <div class="form-control-position">
                                    <i class="icon-user"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="position-relative has-icon-left">
                                <label for="exampleInputPassword" class="sr-only">Password</label>
                                <input type="password" id="exampleInputPassword" class="form-control" required="required" name="password" placeholder="Şifre">
                                <div class="form-control-position">
                                    <i class="icon-lock"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger btn-block waves-effect waves-light">GİRİŞ YAP</button>
                        </div><br /><br /><br />
                        if (ViewBag.Error != null)
                        {
                            <div class="btn btn-danger btn-block waves-effect waves-light">@ViewBag.Error</div>
                        }

                    }
                </div>
            </div>
        </div>
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    </div>
    <script src="@Url.Content("~/Areas/Admin/Content/assets/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/assets/js/popper.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/assets/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/assets/js/waves.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/assets/js/app-script.js")"></script>
</body>
</html>

@model Package_Ecommerce.DataEntities.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-12 col-lg-12 col-xl-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm("Create","Category"))
                    {
                    <div class="form-horizontal">

                        @Html.HiddenFor(model => model.Id)


                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">Kategori Adı</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">Etiketler</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label"> Vitrin mi?</label>
                            <div class="col-sm-10">
                                <div class="icheck-material-primary">
                                    <input type="checkbox" id="checkbox" name="checkbox" checked="checked">
                                    <label for="checkbox"></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i> Değişiklikleri Kaydet</button>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
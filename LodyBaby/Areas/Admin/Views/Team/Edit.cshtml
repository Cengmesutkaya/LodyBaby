@model Package_Ecommerce.DataEntities.Models.Team

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                @using (Html.BeginForm("Edit", "Team", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Guid)

                    <div class="card-body">
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">IMAGE</label>
                            <div class="col-sm-10">
                                <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" /><br />
                                <img src="@Model.Image" style="width:250px;" />
                            </div>

                        </div>
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">Name Surname</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @type = "email", @required = "required" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">Password</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @type = "password", @required = "required" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="basic-input" class="col-sm-4 col-form-label">Job</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Job, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="basic-textarea" class="col-sm-4 col-form-label">About</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" cols="30" id="About" name="About" maxlength="150" rows="5" required="required">@Model.About</textarea>
                            </div>
                        </div>
                            <div class="form-group row">
                                <label for="basic-input" class="col-sm-4 col-form-label">Is Admin</label>
                                <div class="col-sm-10">
                                    <div class="icheck-material-primary">
                                        @if (Model.MemberType == Constants.MemberType.Admin)
                                        {
                                            <input type="checkbox" id="checkbox" name="checkbox" checked>
                                            <label for="checkbox"></label>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="checkbox" name="checkbox">
                                            <label for="checkbox"></label>
                                        }
                                    </div>
                                </div>
                            </div>                        
                            <div class="form-footer">
                                <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i>Değişiklikleri Kaydet</button>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>